<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Disharmony</title>
    <link rel="shortcut icon" href="/assets/img/favicon.png"/>
    <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
</head>
<body>
    <nav>
        <div class="navlink">
            <a href="/logout">Log out</a>
            <input id="donateButton" type="button" action="/donate" method="POST" value="Subscribe" className="donateButton" />
            <input id="donateResetButton" type="button" action="/resetDonate" method="POST" value="Unsubscribe" className="donateResetButton" disabled />
        </div>
    </nav>

    <div id="chatArea">
        <form ref='uploadForm' id='uploadForm' action='/uploadFile' method='POST' encType="multipart/form-data">
            <input id="fileButton" type="file" name="sampleFile" accept="image/*" disabled />
        </form> 

        <form id="editForm">
            <input id="editBox" type="text" disabled />
            <select name="channel" id="channelSelect">
                <option value="welcome">Welcome</option>
                <option value="general">General</option>
                <option value="memes">Memes</option>
            </select>
            <input id="editSubmit" type="submit" disabled />
        </form>

        <form id="deleteForm">
            <input id="clearButton" type="button" action="/clearChat" method="DELETE" value="Clear Channel" className="deleteChatButton" />
            <input id="deleteButton" type="button" action="/deleteChat" method="DELETE" value="Clear My Messages" className="deleteMsgButton" />
        </form>

        <div id="messages"></div>
        
        <script src="/socket.io/socket.io.js"></script>
        <script src="/assets/clientBundle.js"></script>
    </div>
</body>
</html>